    <link rel="stylesheet" href="/css/product/productlist/flaticon.css">
    <link rel="stylesheet" href="/css/product/productlist/style.css">

    <!-- Boxicon-icons  -->

    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>

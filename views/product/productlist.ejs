      body{
        background-color: black;
      }
      .categories{
        background-color: black;
      }
      .categories ul li a{
        color: white;
      }
      .desc p a i{
        font-size: 25px;
      }
      .meta-prod button {
        margin: 0 2px;
        width: 60px;
